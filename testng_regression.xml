<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Suite1" verbose="1">
    <test name="ChromeRegression1">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="org.selenium.pom.tests.TestMyFirstCase">
                <methods>
                    <exclude name="guestCheckoutUsingDirectBankTransfer"></exclude>
                </methods>
            </class>
        </classes>
    </test>
    <test name="FireFoxRegression2">
        <parameter name="browser" value="FIREFOX"></parameter>
        <classes>
            <class name="org.selenium.pom.tests.TestMyFirstCase">
                <methods>
                    <exclude name="guestCheckoutUsingDirectBankTransfer"></exclude>
                </methods>
            </class>
        </classes>
    </test>
</suite>